name=nasm
from_source=nasm
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="core-libs"

configure() {
    cp -rp "${source_dir}"/. ./

    ./configure \
        --host=x86_64-lyre \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var
}

build() {
    make
}

install() {
    make strip
    DESTDIR="${dest_dir}" make install
}
